<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UserDataInfo.MainPage" BackgroundColor="White" Title="User Data Info">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Label Text="Choose Database" TextColor="#2196F3" FontSize="24" FontAttributes="Bold" HorizontalTextAlignment="Center" />
            <Frame BorderColor="#2196F3" Padding="0" Margin="10">
                <StackLayout Padding="5">
                    <Button Text="For Sqlite Database" TextColor="White" BackgroundColor="#2196F3" Clicked="OnSqliteClicked" HorizontalOptions="FillAndExpand" />
                    <Button Text="For Firebase Database" TextColor="White" BackgroundColor="#2196F3" Clicked="OnFirebaseClicked" HorizontalOptions="FillAndExpand"/>                    
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>